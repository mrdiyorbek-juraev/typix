{
  "name": "@typix-editor/extension-mention",
  "version": "3.0.0",
  "description": "Mention extension for Typix editor - adds @mention functionality with flexible configuration",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:fast": "tsup",
    "dev": "pnpm build:fast --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules rm -rf dist",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "peerDependencies": {
    "@typix-editor/react": "workspace:*",
    "react": "^18.2.0 || ^19.0.0-0",
    "react-dom": "^18.2.0 || ^19.0.0-0"
  },
  "devDependencies": {
    "@lexical/react": "^0.39.0",
    "@lexical/selection": "^0.39.0",
    "@lexical/text": "^0.39.0",
    "@lexical/utils": "^0.39.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.1",
    "@typix-editor/react": "workspace:*",
    "lexical": "^0.39.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "typix",
    "lexical",
    "mention",
    "editor",
    "rich-text",
    "extension"
  ],
  "license": "MIT"
}
