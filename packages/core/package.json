    "@lexical/headless": "^0.40.0",
    "@lexical/html": "^0.40.0",
    "@lexical/link": "^0.40.0",
    "@lexical/list": "^0.40.0",
    "@lexical/mark": "^0.40.0",
    "@lexical/markdown": "^0.40.0",
    "@lexical/overflow": "^0.40.0",
    "@lexical/rich-text": "^0.40.0",
    "@lexical/selection": "^0.40.0",
    "@lexical/table": "^0.40.0",
    "@lexical/text": "^0.40.0",
    "@lexical/utils": "^0.40.0",
    "@types/node": "^25.1.0",
    "lexical": "^0.40.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "typix",
    "editor",
    "rich-text",
